{
  "ts-node": { "files": true },
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./", // 절대 경로의 기준 설정
    "paths": {
      "*": ["node_modules/*", "*"] // 경로를 추가할 수 있습니다.
    },
    "typeRoots": ["./src/types", "node_modules/@types"]
  },
  "include": ["./**/*.ts"],
  "exclude": ["node_modules"]
}
